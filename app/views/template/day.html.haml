-content_for :user_menu do
  ="Go to #{link_to "Week", :controller => :template, :action => :week } view"
-content_for :main_header1 do
  = submit_tag "New Day Template", :onClick => "document.getElementById('new_form').toggle();"
-content_for :main_content1 do
  #new_form{:style => "display: none;"}
    - form_remote_tag :url => {:controller => "template", :action => "new_day"}, :html => { :action => url_for(:controller => "template", :action => "new_day")} do
      = label_tag "dtemplate_name", "Name of the new template"
      = text_field_tag "dtemplate[name]"
      %br
      = label_tag "dtemplate_copy", "Would you like to start with another Day's template as your base?"
      = check_box_tag "dtemplate[more]", 1 , false, :onChange => "document.getElementById('new_form_more').toggle();"
      %br
      #new_form_more{:style => "display: none;"}
        = label_tag "dtemplate_from", "Which template would you like to copy"
        = select_tag"dtemplate[copy_from]", template_select(@dtemplate, "Dtemplate")
      = submit_tag "Create New Day Template"
%p= flash[:notice]
#day_form
  = render :partial => "day_form", :locals => {:dtemplate => @dtemplate}
  



