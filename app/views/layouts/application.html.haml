!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=iso-8859-1"}
    %link{:href => "https://serafina.labs.is.wccnet.org/templates/template.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    =javascript_include_tag :defaults
    :css
      .art-blockcontent-body ul li{
        background-image: url("https://serafina.labs.is.wccnet.org/templates/images/blockcontentbullets.png");
      }
    %title<
      =@title
      = #yield :head
  %body{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/page_t.jpg')"}
    #art-page-background-gradient{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/page_g.jpg')"}
    #art-page-background-glare
      #art-page-background-glare-image{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/page_gl.jpg')"}
    #art-main
      .art-sheet
        .art-sheet-tl{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_s.png')"}
        .art-sheet-tr{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_s.png')"}
        .art-sheet-bl{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_s.png')"}
        .art-sheet-br{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_s.png')"}
        .art-sheet-tc{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_h.png')"}
        .art-sheet-bc{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_h.png')"}
        .art-sheet-cl{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_v.png')"}
        .art-sheet-cr{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_v.png')"}
        .art-sheet-cc{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/sheet_c.png')"}
        .art-sheet-body
          =#Top Bar
          .art-header
            .art-header-jpeg{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/header.jpg')"}
            .art-logo
              %h1#name-text.art-logo-name
                %a{:href => "/index.php", :title => "The Computer Commons"}The Computer Commons
              #slogan-text.art-logo-text Washtenaw Community College
          =#END TOP BAR
          .art-content-layout
            .art-content-row
              =#Start SIDE BAR
            %div{:class => "art-layout-cell art-sidebar1"}
              .art-block
                .art-block-body
                  .art-blockheader
                    .l{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/blockheader.png')"}
                    .r{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/blockheader.png')"}
                    .t Main Menu
                  .art-blockcontent
                    .art-blockcontent-body
                      %ul.menu
                        = yield :main_menu
                  .cleared
              .art-block
                .art-block-body
                  .art-blockheader
                    .l{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/blockheader.png')"}
                    .r{:style => "background-image: url('https://serafina.labs.is.wccnet.org/templates/images/blockheader.png')"}
                    .t Main Menu
                  .art-blockcontent
                    .art-blockcontent-body
                      %ul.menu
                        = yield :user_menu
                  .cleared
            %div{:class => "art-layout-cell art-content"}
              .art-post
                .art-post-body
                  .art-post-inner
                    %h2.art-postheader
                      = yield :main_header1
                    .art-postcontent
                      = yield :main_content1
              .art-post
                .art-post-body
                  .art-post-inner
                    %h2.art-postheader
                      = yield :main_header2
                    .art-postcontent
                      = yield :main_content2
              .art-post
                .art-post-body
                  .art-post-inner
                    %h2.art-postheader
                      = yield :main_header3
                    .art-postcontent
                      = yield
              - if (current_user == "dpalay")
                .art-post
                  .art-post-body
                    .art-post-inner
                      %h2.art-postheader
                        Debug
                      .art-postcontent
                        #debug
                          %a{:href => "#", :onclick => "Element.toggle('params_debug_info');return false;"} params
                          %a{:href => "#", :onclick => "Element.toggle('session_debug_info');return false;"} session
                          %a{:href => "#", :onclick => "Element.toggle('env_debug_info');return false;"} env
                          %a{:href => "#", :onclick => "Element.toggle('request_debug_info');return false;"} request

                          %fieldset{:id => "params_debug_info", :class => "debug_info"}
                            %legend params
                            =debug(params)
                          %fieldset{:id => "session_debug_info", :class => "debug_info", :style => "display: none;"}
                            %legend session
                            =debug(session)
                          %fieldset{:id => "env_debug_info", :class => "debug_info", :style => "display: none;"}
                            %legend env
                            =debug(request.env)
                          %fieldset{:id => "request_debug_info", :class => "debug_info", :style => "display: none;"}
                            %legend request
                            =debug(request)
