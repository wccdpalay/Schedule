!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=iso-8859-1"}
    =stylesheet_link_tag "style.css"
    =javascript_include_tag :defaults
    %title<
      =@title
      = #yield :head
  %body
    =#Top Bar
    #ja-wrapper
      #ja-headerwrap
        #ja-header.clearfix{:style => "background: #323232; width 100%;"}
          %h1.logo-text
            %a{:href => "/index.php", :title => "Computer Commons Staff Site"}
              %span{:style => "color: #AAA;"} Serafina - Staff Site
          %p.site-slogan{:style => "color: #CCC;"} Washtenaw Community College
    =#END TOP BAR
    #ja-mainbody
      =#MAIN PANEL
      #ja-contentwrap{:style => "background: #fcfcfc; width: 75%;"}
        %p#notice{:style => "color: green;"}= flash[:notice]
        %p{:style => "float: right;"}
          Logged in as:
          = current_user
        =yield
        -if (current_user == "dpalay")
          #debug
            %a{:href => "#", :onclick => "Element.toggle('params_debug_info');return false;"} params
            %a{:href => "#", :onclick => "Element.toggle('session_debug_info');return false;"} session
            %a{:href => "#", :onclick => "Element.toggle('env_debug_info');return false;"} env
            %a{:href => "#", :onclick => "Element.toggle('request_debug_info');return false;"} request

            %fieldset{:id => "params_debug_info", :class => "debug_info"}
              %legend params
              =debug(params)
            %fieldset{:id => "session_debug_info", :class => "debug_info", :style => "display: none;"}
              %legend session
              =debug(session)
            %fieldset{:id => "env_debug_info", :class => "debug_info", :style => "display: none;"}
              %legend env
              =debug(request.env)
            %fieldset{:id => "request_debug_info", :class => "debug_info", :style => "display: none;"}
              %legend request
              =debug(request)
      =#END MAIN PANEL
      =#SIDE BAR
      .moduletable_menu
        %h3 Main Menu
        %ul.menu
          %li#current.active_item1
            %a{:href => "https://serafina.labs.is.wccnet.org"}
              %span Home
          %li.item73
            %a{:href => "/index.php?option=com_contact&view=category&catid=12&Itemid=73"}
              %span Contact
          %li.item75
            %a{:href => "/index.php?option=com_jpfchat&Itemid=75"}
              %span Help Chat
          %li.item72
            %a{:href => "/order.php"}
              %span Order Supplies
      -if admin?
        .moduletable_menu
          %h3 Admin Menu
          %ul.menu
            %li
              =link_to_unless_current "Week Template", :controller => :template, :action => :week
            %li
              =link_to_unless_current "Day Template", :controller => :template, :action => :day
            %li
              =link_to_unless_current "Back to Calendar", :controller => :calendar, :action => :view
            -if params[:controller] == "calendar"
              -if params[:action] == "view"
                %li
                  %a{:href => url_for(:controller => :calendar, :action => :admin_clear)}
                    %span Force Editing Availability
            -if params[:controller] == "template"
              %br
      .moduletable_menu
        %h3 User Menu
        -if params[:controller] == "calendar"
          %ul.menu
            %li
              =link_to_cal("Go to Today", Date.today, 1)
            %li
              =link_to_cal("Go to This Week", Date.today, 7)
            %li
              =link_to "View My Schedule", :controller => :user, :action => :view_week