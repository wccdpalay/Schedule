                :method => "alter_block",    |
                :uid => nil,                 |
                :col => 4}                   |
    %tr
      %td
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    - for row in ALL_TIMES.index(START_TIME)..ALL_TIMES.index(END_TIME)
      = render :partial => "schedrow", :locals => {:row => row-1, :day => Day.find_by_date(day)}

      